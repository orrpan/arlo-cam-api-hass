{
  "type": "object",
  "properties": {
    "WifiCountryCode": {
      "type": "string",
      "default": "US",
      "description": "Two-letter ISO3166-1 alpha-2 country code"
    },
    "VideoAntiFlickerRate": {
      "type": "integer",
      "default": 60,
      "enum": [50, 60],
      "description": "Electrical frequency: 50 Hz (Europe) or 60 Hz (US)"
    },
    "VideoQualityDefault": {
      "type": "string",
      "default": "default",
      "description": "Default video quality (cameras: low/medium/high/subscription/insane, doorbells: 720sq/1080sq/1536sq)"
    },
    "NotifyOnMotionAlert": {
      "type": "boolean",
      "default": true
    },
    "NotifyOnMotionTimeoutAlert": {
      "type": "boolean",
      "default": false
    },
    "NotifyOnAudioAlert": {
      "type": "boolean",
      "default": false
    },
    "NotifyOnButtonPressAlert": {
      "type": "boolean",
      "default": true
    },
    "NotifyRegisteredAndStatusUpdate": {
      "type": "boolean",
      "default": true
    },
    "MotionRecordingWebHookUrl": {
      "type": "string",
      "default": "http://10.0.4.10:11080/endpoint/@scrypted/arlo-local/public/motionDetected",
      "description": "Webhook URL for motion detection events"
    },
    "AudioRecordingWebHookUrl": {
      "type": "string",
      "default": "http://10.0.4.10:11080/endpoint/@scrypted/arlo-local/public/",
      "description": "Webhook URL for audio detection events"
    },
    "UserRecordingWebHookUrl": {
      "type": "string",
      "default": "http://10.0.4.10:11080/endpoint/@scrypted/arlo-local/public/",
      "description": "Webhook URL for user recording events"
    },
    "StatusUpdateWebHookUrl": {
      "type": "string",
      "default": "http://10.0.4.10:11080/endpoint/@scrypted/arlo-local/public/statusUpdated",
      "description": "Webhook URL for device status updates"
    },
    "RegistrationWebHookUrl": {
      "type": "string",
      "default": "http://10.0.4.10:11080/endpoint/@scrypted/arlo-local/public/registered",
      "description": "Webhook URL for device registration"
    },
    "ButtonPressWebHookUrl": {
      "type": "string",
      "default": "http://10.0.4.10:11080/endpoint/@scrypted/arlo-local/public/buttonPressed",
      "description": "Webhook URL for doorbell button press events"
    },
    "DeviceSettings": {
      "type": "object",
      "default": {},
      "description": "Per-device settings organized by serial number",
      "patternProperties": {
        ".*": {
          "type": "object",
          "properties": {
            "VideoFlip": {
              "type": "boolean",
              "description": "Flip video vertically"
            },
            "VideoMirror": {
              "type": "boolean",
              "description": "Mirror video horizontally"
            },
            "NightModeLightSourceAlert": {
              "type": "integer",
              "enum": [0, 1],
              "description": "Enable/disable spotlight at night"
            },
            "NightModeGrey": {
              "type": "integer",
              "description": "Night mode grey value"
            },
            "VideoQuality": {
              "type": "string",
              "description": "Override global VideoQualityDefault for this device"
            },
            "PIREnableLED": {
              "type": "boolean",
              "description": "Enable/disable PIR LED"
            },
            "PIRLEDSensitivity": {
              "type": "integer",
              "minimum": 0,
              "maximum": 100,
              "description": "PIR LED sensitivity"
            }
          }
        }
      }
    }
  }
}
